# Telegram API Credentials
# Get these from https://my.telegram.org
TG_API_ID=your_api_id_here
TG_API_HASH=your_api_hash_here
TG_BOT_TOKEN=your_bot_token_here

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/anime_files.db

# File Storage Paths
DOWNLOAD_DIR=./data/downloads
ARCHIVE_DIR=./data/archive

# Concurrency Settings
MAX_UPLOAD_CONCURRENCY=2
DOWNLOAD_WORKERS=2

# File Management
FILE_RETENTION_SECONDS=604800
DELETE_AFTER_UPLOAD=true

# Rate Limiting (seconds between episode downloads)
RATE_LIMIT_SECONDS=10

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Telegram channel ID for storing uploaded files
VAULT_CHANNEL_ID=0

# If the URL contains credentials, treat it as secret and do not commit to source control.
REDIS_URL="redis://localhost:6379/0"

# Prefix used when storing authentication/connection tokens in Redis to avoid key collisions.
# Keep this value consistent across deployments that share the same Redis.
TOKEN_PREFIX="connect:token:"

# Prefix used for per-chat session storage in Redis.
# Used to persist conversation state; choose a prefix that prevents collisions with other data.
SESSION_CHAT_PREFIX="session:chat:"